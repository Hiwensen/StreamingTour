<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".video.VideoClipActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/range_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/video_view"
        android:layout_marginTop="5dp"
        app:lineColorSelected="#ED1C24"
        app:thumbSize="20dp"
        app:seekBarHeight="10dp"
        app:cellMode="number"
        app:seekBarMode="range" />

    <SeekBar
        android:id="@+id/seek_bar_audio_original"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/range_seek_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="original audio"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_bar_audio_original"/>

    <SeekBar
        android:id="@+id/seek_bar_audio_background_music"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_bar_audio_original" />

    <TextView
        android:id="@+id/text_audio_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="background audio"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_bar_audio_background_music"/>

    <Button
        android:id="@+id/start_clip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start clip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_audio_background"/>

    <Button
        android:id="@+id/play_new_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play new video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/start_clip"/>

    <Button
        android:id="@+id/mix_audio_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mix video audio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:onClick="mixAudioVideo"
        app:layout_constraintTop_toBottomOf="@id/play_new_video"/>

</androidx.constraintlayout.widget.ConstraintLayout>