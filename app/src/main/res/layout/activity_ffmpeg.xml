<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/jni_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello from JNI"
        app:layout_constraintTop_toBottomOf="@id/ffmpeg_play_2"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <SurfaceView
        android:id="@+id/ffmpeg_surface_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ffmpeg_play_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Play video1"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/ffmpeg_surface_view" />

    <Button
        android:id="@+id/ffmpeg_play_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Play Video2"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/ffmpeg_play_1"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/ffmpeg_surface_view" />

    <Button
        android:id="@+id/ffmpeg_play_mp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Play MP3"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/ffmpeg_play_2"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/ffmpeg_surface_view" />


</androidx.constraintlayout.widget.ConstraintLayout>