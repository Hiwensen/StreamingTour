<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/image_playground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="draw an image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/audio_playground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="record audio and play"
        app:layout_constraintTop_toBottomOf="@id/image_playground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/camera_playground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="camera playground"
        app:layout_constraintTop_toBottomOf="@id/audio_playground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>