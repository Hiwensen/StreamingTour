<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/media_recorder_record"
        android:text="media recorder start recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/media_player_play"
        android:text="media recorder start playing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/media_recorder_record"/>

    <Button
        android:id="@+id/audio_record_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="audiorecord start record"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/media_player_play"/>

    <Button
        android:id="@+id/audio_track_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="audiotracck play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audio_record_record"/>

    <Button
        android:id="@+id/pcm_to_wav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pcm to wav"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audio_track_play"/>

</androidx.constraintlayout.widget.ConstraintLayout>